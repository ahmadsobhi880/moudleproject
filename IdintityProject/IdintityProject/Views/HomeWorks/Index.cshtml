@model IEnumerable<IdintityProject.Models.HomeWorksModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutLoggedIn.cshtml";
}

<h2>List Of HomeWorks</h2>
@if (User.IsInRole("Teachers"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.homeworkName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.homeworkDesc)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.homeworkName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.homeworkDesc)
                </td>
                <td>

                    <a href="@Html.DisplayFor(modelItem => item.homeworkFile)" download>Download Homework File</a>




                </td>

                @if (User.IsInRole("Teachers"))
                {
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                }
            </tr>
        }

    </table>
