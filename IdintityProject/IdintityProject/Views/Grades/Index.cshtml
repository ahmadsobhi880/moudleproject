@model IEnumerable<IdintityProject.Models.GradesModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutLoggedIn.cshtml";
}

<h3>List Of Grades </h3>
@if (User.IsInRole("Admins") || User.IsInRole("Teachers"))
{
    <p>
        @Html.ActionLink("Request for a New Grade", "Create")
    </p>
}


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Student_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Course_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mygrade)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Student_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mygrade)
            </td>

            @if (User.IsInRole("Admins") || User.IsInRole("Teachers"))
            {

                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            }

        </tr>
    }

</table>
