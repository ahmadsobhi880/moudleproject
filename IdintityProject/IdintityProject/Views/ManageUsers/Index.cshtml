@model IEnumerable<IdintityProject.ViewModels.Users_in_Role_ViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutLoggedIn.cshtml";
}

<h3>List Of Users</h3>

<table class="table">
    <tr>

        <th>
           
            @Html.DisplayNameFor(model => model.Username)
            
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Role)
            
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Course)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Course2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Course3)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Course4)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Course5)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>

    <td>
        @Html.DisplayFor(modelItem => item.Username)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PhoneNumber)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Role)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Course)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Course2)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Course3)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Course4)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Course5)
    </td>

    @if (User.IsInRole("Admins"))
    {
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.UserId }) |
            @Html.ActionLink("Details", "Details", new { id = item.UserId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.UserId })
        </td>
    }

    </tr>
    }

</table>
