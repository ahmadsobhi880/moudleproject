























@model IEnumerable<IdintityProject.Models.CourseModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutLoggedIn.cshtml";
}

<h2>Courses</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CourseName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CourseDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Course_Price)

        </th>
        <th>
            @Html.DisplayNameFor(model => model.Teacher_Course)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CourseExam)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Exam_Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Exam_Moed)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CourseName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CourseDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Course_Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Teacher_Course)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CourseExam)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Exam_Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Exam_Moed)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
