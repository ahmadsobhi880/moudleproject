@model IdintityProject.Models.StudentRequest

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutLoggedIn.cshtml";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <title>Student Request</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/ContactStyles/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/bootstrap/dashboardPage/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/ContactStyles/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/ContactStyles/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/ContactStyles/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/ContactStyles/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/ContactStyles/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/ContactStyles/css/main.css">
    <!--===============================================================================================-->
</head>
<body>

    <div class="contact1">
        <div class="container-contact1">
            <div class="contact1-pic js-tilt" data-tilt>
                <img src="~/ContactStyles/images/img-01.png" alt="IMG">
            </div>
            @using (Html.BeginForm("Index", "StudentRequest", FormMethod.Post, new { @class = "contact1-form validate-form" }))
            {
                @Html.AntiForgeryToken()

                <span class="contact1-form-title">
                    Get in touch
                </span>

                @Html.HiddenFor(model => model.RequestStatus, new { @Value = "Pending" })


        <div class="wrap-input1 validate-input" data-validate="Name is required">

            @Html.TextBoxFor(m => m.UserNameRequest, new { @placeholder = "Name", @class = "input1" })

            <span class="shadow-input1"></span>
        </div>

                <div class="wrap-input1 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                    @Html.TextBoxFor(m => m.EmailRequest, new { @placeholder = "Email", @class = "input1" })

                    <span class="shadow-input1"></span>
                </div>

                <div class="wrap-input1 validate-input" data-validate="Subject is required">
                    @Html.TextBoxFor(m => m.SubjectName, new { @placeholder = "Subject", @class = "input1" })
                    <span class="shadow-input1"></span>
                </div>



                <div class="wrap-input1 validate-input" data-validate="Message is required">
                    @Html.TextAreaFor(m => m.messageRequest, new { @placeholder = "Message", @class = "input1" , @style = "height: 576px;" })



                    <span class="shadow-input1"></span>
                </div>

                <div class="container-contact1-form-btn">

                    <input type="submit" value="Send request" class="contact1-form-btn">

                </div>
            }

        </div>
    </div>




    <!--===============================================================================================-->
    <script src="~/ContactStyles/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/ContactStyles/vendor/bootstrap/js/popper.js"></script>
    <script src="~/ContactStyles/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/ContactStyles/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/ContactStyles/vendor/tilt/tilt.jquery.min.js"></script>
    <script>
		$('.js-tilt').tilt({
			scale: 1.1
		})
    </script>

    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-23581568-13"></script>
    <script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', 'UA-23581568-13');
    </script>

    <!--===============================================================================================-->
    <script src="~/ContactStyles/js/main.js"></script>









</body>
</html>
