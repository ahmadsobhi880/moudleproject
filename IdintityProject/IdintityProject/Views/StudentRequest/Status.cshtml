@model IdintityProject.Models.StudentRequest

@{
    ViewBag.Title = "Ignore";
    Layout = "~/Views/Shared/LayoutLoggedIn.cshtml";
}

<h2>Ignore</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>StudentRequest</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)



    @Html.HiddenFor(model => model.UserNameRequest)


    @Html.HiddenFor(model => model.EmailRequest)


    @Html.HiddenFor(model => model.SubjectName)
    @Html.HiddenFor(model => model.messageRequest)

   
    

    <div class="form-group">
        @Html.LabelFor(model => model.RequestStatus, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.RequestStatus, new SelectList(ViewBag.list), "- Select a status -", htmlAttributes: new { @class = "form-control" })



        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">

            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "ApprovalRequest")
</div>
